<%- include("header") -%>

  <div id="heading" class="box">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <!--
mixing HTML and javascript code with below block. Indicate to EJS which
Javascript by enclosing it with the opening and closing scriplet tags
on a line-to-line basis:
-->
  <div class="box">
    <% for (var i = 0; i<newListItems.length; i++) { %>
    <div class="item">
      <input type="checkbox">
      <p><%= newListItems[i] %></p>
    </div>
    <% } %>

  <form class="" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
  </div>

